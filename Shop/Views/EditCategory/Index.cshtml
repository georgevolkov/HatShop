@using System.Data.Entity.Core.Metadata.Edm
@using Shop.Models
@model CategoryModel

@{
    Layout = null;
    var title = "Редактирование категории";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@title</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body class="form-control" style="width: 98%; height: 100%; margin: 1%;">
    <div>
        @using (@Html.BeginForm("Index", "EditCategory", FormMethod.Post))
        {
            <div class="text-left">@title</div>
            <label class="label-info" style="width: 20%">
                @Html.ValueFor(o => o.CategoryId)
                @Html.HiddenFor(o => o.CategoryId)
            </label>
            <div class="label-info" >
                Категория:
            </div>
            @Html.TextBoxFor(o => o.CategoryName, new { @class = "form-control" })
            <div class="label-info" >
                Родительская категория:
            </div>
            <div>
                @Html.DropDownListFor(o => o.ParentCategoryId, Model.CategoryList, "--Пусто--", new { @class = "form-control" })
            </div>
            <div>
                <input type="submit" value="Сохранить" class="btn-default" />
            </div>
        }
    </div>
</body>
</html>
