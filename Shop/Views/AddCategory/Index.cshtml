@using Shop.Models
@model Shop.ViewModels.AddCategoryViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<div>
    <div>
        <table>
            <caption>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Категория
                    </th>
                    <th>
                        Удалить
                    </th>
                </tr>
            </caption>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@Html.TextBox("Ttt", @category.CategoryName)</td>
                    <td>@Html.ActionLink("Обновить", "UpdateCategory", new { category = category })</td>
                    <td>@Html.ActionLink("Удалить", "DeleteCategory", new {categoryId = category.CategoryId})</td>
                </tr>
            }
        </table>
    </div>
    <form action="/AddCategory/Index" enctype="multipart/form-data" method="post">
        <div>
            <div>
                Название категории:
            </div>
            <div>
                @Html.TextBoxFor(o => o.Category.CategoryName)
            </div>
        </div>
        <div>
            <div>
                Родительская категория:
            </div>
            <div>
                @Html.DropDownListFor(o => o.Category.ParentCategoryId, Model.CategoriesList, "--Нет родительской категории--")
                @*            @Html.DropDownList("CategoryList", "--Выберите категорию--")*@
            </div>
        </div>
        <div>
            <button type="submit">Сохранить</button>
        </div>
    </form>
</div>
</body>
</html>
